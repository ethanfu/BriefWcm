<% provide(:title, "登录") %>
<div class="container-fluid">
	<div class="row-fluid">
	
		<div class="row-fluid">
			<div class="span12 center login-header">
				<h2>欢迎来到 Breif WCM</h2>
			</div><!--/span-->
		</div><!--/row-->
		
		<div class="row-fluid">
			<div class="well span5 center login-box">
				 <% if flash[:error] %>
				 <div class="alert alert-info">
		           <%= flash[:error] %>
		           </div>
		        <% end %>
				<form class="form-horizontal" action="/doLogin" method="post">
					<fieldset>
						<div class="input-prepend" title="用户名" data-rel="tooltip">
							<span class="add-on"><i class="icon-user"></i></span>
							<input  autofocus id="users_email" name="users[email]" size="30" type="text" class="input-large span10">
						</div>
						<div class="clearfix"></div>

						<div class="input-prepend" title="密码" data-rel="tooltip">
							<span class="add-on"><i class="icon-lock"></i></span>
							<input class="input-large span10" id="users_password" name="users[password]" size="30" type="password">
						</div>
						<div class="clearfix"></div>

						<div class="input-prepend">
						<label class="remember" for="remember"><input type="checkbox" id="remember" />记住我</label>
						</div>
						<div class="clearfix"></div>

						<p class="center span5">
						<button type="submit" class="btn btn-primary">登录</button>
						</p>
					</fieldset>
				</form>
			</div><!--/span-->
		</div><!--/row-->
			</div><!--/fluid-row-->
	
</div><!--/.fluid-container-->