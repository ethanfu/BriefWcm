<!-- 后台首页 -->
	
	
	<div class="row-fluid">
			<!-- 右侧菜单 -->	
			<%= render 'layouts/admin_menu' %>
			
		<div id="content" class="span10">
			<!-- content starts -->
			

			<div>
				<ul class="breadcrumb">
					<li>
						<a href="/admin">首页</a> <span class="divider">/</span>
					</li>
					<li>
						<a href="/banner">banner维护</a>
					</li>
				</ul>
			</div>
			
			<div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-user"></i>banner维护</h2>
						<div class="box-icon">
							<a title="添加banner" href="#" class="btn btn-setting btn-round"><i class="icon-plus"></i></a>
							<a title="收起" href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a title="关闭" href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>标题</th>
								  <th>描述</th>
								  <th>链接地址</th>
								  <th>创建时间</th>
								  <th>操作</th>
							  </tr>
						  </thead>   
						  
						  <tbody>
							<% @banners.each do |banner| %>
							<tr>
								<td class="center"><%= banner.title %></td>
								<td class="center"><%= banner.bDesc %></td>
								<td class="center"><%= banner.linkUrl %></td>
								<td class="center">
									<%= banner.created_at %>
								</td>
								<td class="center">
									<%= link_to '查看', banner,class: "btn btn-success" %>
									<%= link_to '编辑', edit_banner_path(banner),class: "btn btn-info" %>
									<%= link_to '删除', banner, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger"%>
									
								</td>
							</tr>
							<% end %>
							
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

					<!-- content ends -->
			</div><!--/#content.span10-->
		</div><!--/fluid-row-->
				
		<hr>
		<!-- 弹窗设置 -->
		<div class="modal hide fade" id="myModal">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">×</button>
				<h3>新增banner</h3>
			</div>
			<div class="modal-body">
				<div class="box-content">
					<form class="form-horizontal">
						<fieldset>
						  <div class="control-group">
							<label class="control-label" for="title">标题</label>
							<div class="controls">
							  <input class="input-xlarge focused" id="title" type="text" value="">
							</div>
						  </div>
						  <div class="control-group">
							<label class="control-label" for="bdesc">描述</label>
							<div class="controls">
							  <input class="input-xlarge focused" id="bdesc" type="text" value="">
							</div>
						  </div>
						  <div class="control-group">
							<label class="control-label" for="bdesc">链接地址</label>
							<div class="controls">
							  <input class="input-xlarge focused" id="bdesc" type="text" value="">
							</div>
						  </div>
						 
						  <div class="control-group">
							<label class="control-label">图片</label>
							<div class="controls">
							  <input type="file">
							</div>
						  </div>							  
						  <div class="form-actions">
							<button type="submit" class="btn btn-primary">保存</button>
							<a href="#" class="btn" data-dismiss="modal">关闭</a>
						  </div>
						</fieldset>
					</form>
				</div>
			</div>
			
		</div>

		
		
	